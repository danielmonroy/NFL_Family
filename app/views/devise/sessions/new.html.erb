<div class="container-scroller">
  <div class="container-fluid page-body-wrapper full-page-wrapper">
    <div class="content-wrapper d-flex align-items-center auth auth-bg-1 theme-one">
      <div class="row w-100">
        <div class="col-lg-4 mx-auto">
          <div class="auto-form-wrapper pt-3">
            <img src="/nfl-logo.png" class="img-fluid mx-auto d-block">
            <br>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="form-group">
                <label class="label">Email</label>
                <div class="input-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="mdi mdi-email-outline"></i>
                    </span>
                  </div>
                  <br>
                </div>
              </div>
              <div class="form-group py-3">
                <label class="label">Contraseña</label>
                <div class="input-group">
                  <br><br>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                  <div class="input-group-append">
                    <span class="input-group-text">
                      <i class="mdi mdi-key"></i>
                    </span>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <%= f.submit "Iniciar sesión", class: "btn btn-primary submit-btn btn-block" %>
              </div>
            <% end %>
          </div>
          <br>
          <p class="footer-text text-center">copyright © 2019 NFL Monroy. Todos los derechos reservados.</p>
        </div>
      </div>
    </div>
    <!-- content-wrapper ends -->
  </div>
  <!-- page-body-wrapper ends -->
</div>
<!-- container-scroller -->
